<?xml version="1.0" encoding="utf-8"?>
<Patch>
  <!-- Mint -->
  <Operation Class="PatchOperationFindMod">
    <mods>
      <li>SeedsPlease</li>
    </mods>
    <match Class="PatchOperationSequence">
      <success>Always</success>
      <operations>
        <li Class="PatchOperationAdd">
          <xpath>/Defs</xpath>
          <value>
            <SeedsPlease.SeedDef ParentName="SeedBase">
              <defName>Seed_SSMint</defName>
              <label>Mint shoots</label>
              <sources>
                <li>Plant_SSMint</li>
              </sources>
            </SeedsPlease.SeedDef>
          </value>
        </li>
        <li Class="PatchOperationAdd">
          <xpath>/Defs</xpath>
          <value>
            <RecipeDef ParentName="ExtractSeed">
              <defName>ExtractSeed_SSMint</defName>
              <label>extract mint shoots</label>
              <description>Prepares useful shoots from mint.</description>
              <ingredients>
                <li>
                  <filter>
                    <thingDefs>
                      <li>SSMintLeaves</li>
                    </thingDefs>
                  </filter>
                  <count>7</count>
                </li>
              </ingredients>
              <fixedIngredientFilter>
                <thingDefs>
                  <li>SSMintLeaves</li>
                </thingDefs>
              </fixedIngredientFilter>
              <products>
                <Seed_SSMint>3</Seed_SSMint>
              </products>
            </RecipeDef>
          </value>
        </li>
      </operations>
    </match>
  </Operation>
