        <baseMoodEffect>+7</baseMoodEffect>
      </li>
    </stages>
  </ThoughtDef>
  <JoyGiverDef>
    <defName>SSEatMintChocolate</defName>
    <giverClass>JoyGiver_Ingest</giverClass>
    <baseChance>5.0</baseChance>
