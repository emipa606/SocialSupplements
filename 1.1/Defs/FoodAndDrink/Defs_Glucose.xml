      <thingDefs>
        <li>MSHydrochloricAcid</li>
        <li>RawPotatoes</li>
        <li>RawRice</li>
        <li>RawCorn</li>
      </thingDefs>
    </fixedIngredientFilter>
    <products>
      <SSGlucose>10</SSGlucose>
    </products>
    <recipeUsers>
      <li>FueledStove</li>
      <li>ElectricStove</li>
    </recipeUsers>
    <skillRequirements>
      <Intellectual>5</Intellectual>
