<?xml version="1.0" encoding="utf-8"?>
<Defs>
  <ThingDef ParentName="ResourceBase">
    <defName>SSMilkPowder</defName>
    <label>Powdered Milk</label>
    <description>Powdered milk or dried milk is a manufactured dairy product made by evaporating milk to dryness. One purpose of drying milk is to preserve it; milk powder has a far longer shelf life than liquid milk and does not need to be refrigerated, due to its low moisture content.</description>
    <techLevel>Medieval</techLevel>
    <graphicData>
      <texPath>Things/Item/SSMilkPowder</texPath>
      <graphicClass>Graphic_StackCount</graphicClass>
    </graphicData>
    <stackLimit>150</stackLimit>
    <soundInteract>Standard_Drop</soundInteract>
    <soundDrop>Standard_Drop</soundDrop>
    <socialPropernessMatters>true</socialPropernessMatters>
    <statBases>
      <MaxHitPoints>60</MaxHitPoints>
      <MarketValue>4.65</MarketValue>
      <Mass>0.003</Mass>
      <Flammability>0.8</Flammability>
      <DeteriorationRate>5</DeteriorationRate>
      <Nutrition>0.125</Nutrition>
    </statBases>
    <tickerType>Rare</tickerType>
    <thingCategories>
      <li>AnimalProductRaw</li>
    </thingCategories>
    <ingestible>
      <preferability>DesperateOnly</preferability>
      <foodType>Processed</foodType>
      <tasteThought>AteRawFood</tasteThought>
      <maxNumToIngestAtOnce>1</maxNumToIngestAtOnce>
      <ingestSound>Meal_Eat</ingestSound>
      <optimalityOffsetHumanlikes>-10</optimalityOffsetHumanlikes>
      <optimalityOffsetFeedingAnimals>-5</optimalityOffsetFeedingAnimals>
    </ingestible>
    <comps>
      <li Class="CompProperties_Ingredients" />
    </comps>
  </ThingDef>
  <RecipeDef>
    <defName>MakeSSMilkPowder</defName>
    <label>Make Powdered Milk</label>
    <description>Make 50 Powdered Milk.</description>
    <jobString>Making Powdered Milk.</jobString>
    <workSpeedStat>CookSpeed</workSpeedStat>
    <effectWorking>Cook</effectWorking>
    <soundWorking>Recipe_CookMeal</soundWorking>
    <allowMixingIngredients>true</allowMixingIngredients>
    <workAmount>1500</workAmount>
    <targetCountAdjustment>50</targetCountAdjustment>
    <workSkill>Cooking</workSkill>
    <ingredients>
      <li>
        <filter>
          <thingDefs>
            <li>Milk</li>
          </thingDefs>
        </filter>
        <count>75</count>
      </li>
    </ingredients>
    <fixedIngredientFilter>
      <thingDefs>
        <li>Milk</li>
      </thingDefs>
    </fixedIngredientFilter>
    <products>
      <SSMilkPowder>50</SSMilkPowder>
    </products>
    <recipeUsers>
      <li>Campfire</li>
      <li>FueledStove</li>
      <li>ElectricStove</li>
    </recipeUsers>
    <skillRequirements>
      <Cooking>4</Cooking>
    </skillRequirements>
  </RecipeDef>
  <RecipeDef>
    <defName>MakeMilkFromSSMilkPowder</defName>
    <label>Make Milk from powdered milk.</label>
    <description>Make 50 Milk.</description>
    <jobString>Reconstituting Milk.</jobString>
    <workSpeedStat>CookSpeed</workSpeedStat>
    <effectWorking>Cook</effectWorking>
    <soundWorking>Recipe_CookMeal</soundWorking>
    <allowMixingIngredients>true</allowMixingIngredients>
    <workAmount>500</workAmount>
    <targetCountAdjustment>50</targetCountAdjustment>
    <workSkill>Cooking</workSkill>
    <ingredients>
      <li>
        <filter>
          <thingDefs>
            <li>SSMilkPowder</li>
          </thingDefs>
        </filter>
        <count>50</count>
      </li>
    </ingredients>
    <fixedIngredientFilter>
      <thingDefs>
        <li>SSMilkPowder</li>
      </thingDefs>
    </fixedIngredientFilter>
    <products>
      <Milk>50</Milk>
    </products>
    <recipeUsers>
      <li>Campfire</li>
      <li>FueledStove</li>
      <li>ElectricStove</li>
    </recipeUsers>
    <skillRequirements>
      <Cooking>3</Cooking>
    </skillRequirements>
  </RecipeDef>
</Defs>