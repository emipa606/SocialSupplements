<?xml version="1.0" encoding="utf-8"?>
<Defs>
  <ThingDef ParentName="ResourceBase">
    <defName>SSPowerBar</defName>
    <label>Power Bar</label>
    <description>A delicious and sweet chocolate rice bar with fruits that can give a boost of energy. It helps with recreation as well as some nutrition.</description>
    <graphicData>
      <texPath>Things/Item/SSPowerBar</texPath>
      <graphicClass>Graphic_StackCount</graphicClass>
      <!-- <drawSize>0.88</drawSize> -->
    </graphicData>
    <stackLimit>25</stackLimit>
    <soundInteract>Standard_Drop</soundInteract>
    <soundDrop>Standard_Drop</soundDrop>
    <socialPropernessMatters>true</socialPropernessMatters>
    <statBases>
      <MaxHitPoints>60</MaxHitPoints>
      <MarketValue>38.9</MarketValue>
      <Mass>0.075</Mass>
      <Flammability>1.0</Flammability>
      <DeteriorationRate>8</DeteriorationRate>
      <Nutrition>0.4</Nutrition>
    </statBases>
    <thingCategories>
      <li>Foods</li>
    </thingCategories>
    <ingestible>
      <preferability>NeverForNutrition</preferability>
      <foodType>Processed</foodType>
      <joy>0.10</joy>
      <joyKind>Gluttonous</joyKind>
      <maxNumToIngestAtOnce>1</maxNumToIngestAtOnce>
      <ingestSound>Meal_Eat</ingestSound>
      <tasteThought>AteSSPowerBar</tasteThought>
      <outcomeDoers>
        <li Class="IngestionOutcomeDoer_GiveHediff">
          <hediffDef>SSPowerBarHigh</hediffDef>
          <severity>0.5</severity>
        </li>
      </outcomeDoers>
    </ingestible>
  </ThingDef>
  <HediffDef>
    <defName>SSPowerBarHigh</defName>
    <label>Ate power bar</label>
    <description>Power bar effect</description>
    <initialSeverity>0.5</initialSeverity>
    <maxSeverity>0.5</maxSeverity>
    <lethalSeverity>-1.0</lethalSeverity>
    <defaultLabelColor>(0.65, 0.65, 0.65)</defaultLabelColor>
    <hediffClass>HediffWithComps</hediffClass>
    <isBad>false</isBad>
    <comps>
      <li Class="HediffCompProperties_SeverityPerDay">
        <severityPerDay>-0.95</severityPerDay>
      </li>
    </comps>
    <stages>
      <li>
        <lifeThreatening>false</lifeThreatening>
        <statOffsets>
          <WorkSpeedGlobal>+0.05</WorkSpeedGlobal>
        </statOffsets>
        <capMods>
          <li>
            <capacity>BloodFiltration</capacity>
            <offset>0.03</offset>
          </li>
        </capMods>
      </li>
    </stages>
  </HediffDef>
  <ThoughtDef>
    <defName>AteSSPowerBar</defName>
    <showBubble>true</showBubble>
    <icon>Things/Mote/ThoughtSymbol/Food</icon>
    <durationDays>0.5</durationDays>
    <stackLimit>2</stackLimit>
    <stages>
      <li>
        <label>ate power bar</label>
        <description>That pepped me up.</description>
        <baseMoodEffect>+4</baseMoodEffect>
      </li>
    </stages>
  </ThoughtDef>
  <JoyGiverDef>
    <defName>SSEatPowerBar</defName>
    <giverClass>JoyGiver_Ingest</giverClass>
    <baseChance>5.0</baseChance>
    <pctPawnsEverDo>0.5</pctPawnsEverDo>
    <thingDefs>
      <li>SSPowerBar</li>
    </thingDefs>
    <joyKind>Meditative</joyKind>
    <requiredCapacities>
      <li>Manipulation</li>
      <li>Eating</li>
    </requiredCapacities>
  </JoyGiverDef>
  <RecipeDef>
    <defName>MakeSSPowerBar</defName>
    <label>Make Power Bar</label>
    <description>Prepare 1 Power Bar.</description>
    <jobString>Preparing Power Bar.</jobString>
    <workSpeedStat>CookSpeed</workSpeedStat>
    <effectWorking>Cook</effectWorking>
    <soundWorking>Recipe_CookMeal</soundWorking>
    <allowMixingIngredients>false</allowMixingIngredients>
    <workAmount>300</workAmount>
    <targetCountAdjustment>1</targetCountAdjustment>
    <workSkill>Cooking</workSkill>
    <ingredients>
      <li>
        <filter>
          <thingDefs>
            <li>Chocolate</li>
          </thingDefs>
        </filter>
        <count>2</count>
      </li>
      <li>
        <filter>
          <thingDefs>
            <li>SSGlucose</li>
          </thingDefs>
        </filter>
        <count>1</count>
      </li>
      <li>
        <filter>
          <thingDefs>
            <li>SSMilkPowder</li>
          </thingDefs>
        </filter>
        <count>2</count>
      </li>
      <li>
        <filter>
          <thingDefs>
            <li>RawRice</li>
          </thingDefs>
        </filter>
        <count>10</count>
      </li>
      <li>
        <filter>
          <thingDefs>
            <li>RawAgave</li>
            <li>RawBerries</li>
          </thingDefs>
        </filter>
        <count>5</count>
      </li>
    </ingredients>
    <fixedIngredientFilter>
      <thingDefs>
        <li>Chocolate</li>
        <li>SSGlucose</li>
        <li>SSMilkPowder</li>
        <li>RawRice</li>
        <li>RawAgave</li>
        <li>RawBerries</li>
      </thingDefs>
    </fixedIngredientFilter>
    <products>
      <SSPowerBar>1</SSPowerBar>
    </products>
    <recipeUsers>
      <li>ElectricStove</li>
      <li>FueledStove</li>
    </recipeUsers>
    <skillRequirements>
      <Cooking>8</Cooking>
    </skillRequirements>
    <researchPrerequisite>Cocoa</researchPrerequisite>
  </RecipeDef>
  <RecipeDef>
    <defName>MakeBulkSSPowerBar</defName>
    <label>Make Power Bar in bulk</label>
    <description>Prepare 5 Power Bars.</description>
    <jobString>Preparing Power Bars.</jobString>
    <workSpeedStat>CookSpeed</workSpeedStat>
    <effectWorking>Cook</effectWorking>
    <soundWorking>Recipe_CookMeal</soundWorking>
    <allowMixingIngredients>false</allowMixingIngredients>
    <workAmount>1500</workAmount>
    <targetCountAdjustment>5</targetCountAdjustment>
    <workSkill>Cooking</workSkill>
    <ingredients>
      <li>
        <filter>
          <thingDefs>
            <li>Chocolate</li>
          </thingDefs>
        </filter>
        <count>10</count>
      </li>
      <li>
        <filter>
          <thingDefs>
            <li>SSGlucose</li>
          </thingDefs>
        </filter>
        <count>5</count>
      </li>
      <li>
        <filter>
          <thingDefs>
            <li>SSMilkPowder</li>
          </thingDefs>
        </filter>
        <count>10</count>
      </li>
      <li>
        <filter>
          <thingDefs>
            <li>RawRice</li>
          </thingDefs>
        </filter>
        <count>50</count>
      </li>
      <li>
        <filter>
          <thingDefs>
            <li>RawAgave</li>
            <li>RawBerries</li>
          </thingDefs>
        </filter>
