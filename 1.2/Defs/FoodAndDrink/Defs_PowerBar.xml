    </ingredients>
    <fixedIngredientFilter>
      <thingDefs>
        <li>Chocolate</li>
        <li>SSGlucose</li>
        <li>SSMilkPowder</li>
        <li>RawRice</li>
        <li>RawAgave</li>
        <li>RawBerries</li>
      </thingDefs>
    </fixedIngredientFilter>
    <products>
      <SSPowerBar>5</SSPowerBar>
    </products>
    <recipeUsers>
      <li>ElectricStove</li>
      <li>FueledStove</li>
    </recipeUsers>
    <skillRequirements>
      <Cooking>9</Cooking>
    </skillRequirements>
    <researchPrerequisite>Cocoa</researchPrerequisite>
  </RecipeDef>
</Defs>